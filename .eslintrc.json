{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "meteor": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:meteor/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["meteor", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "prefer-const": "error",
    "no-var": "error"
  },
  "globals": {
    "Meteor": "readonly",
    "check": "readonly",
    "Match": "readonly",
    "Collection2": "readonly"
  }
}
